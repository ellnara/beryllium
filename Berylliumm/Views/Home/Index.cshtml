                            <h3>Architecture #1</h3>
                        </div>
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control"
                   href="#myCarousel"
                   data-slide="prev">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
                <a class="right carousel-control"
                   href="#myCarousel"
                   data-slide="next">
                    <i class="fa-solid fa-arrow-right"></i>
                </a>
            </div>
        </div>
